<% layout('layouts/boil') %>
    <form style="width: 40%; margin: auto; margin-top: 10vh;">
        <div class="form-group">
          <label for="exampleInputEmail1">Email address</label>
          <input type="email" class="form-control mt-2" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="email" required>
          <small id="emailHelp" class="form-text text-muted display-6">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
          <label style="margin-top: 10px;" for="exampleInputPassword1">Password</label>
          <input type="password" class="form-control mt-2" id="exampleInputPassword1" placeholder="Password" name="password" required>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Login</button>
      </form>
