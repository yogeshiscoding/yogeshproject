<% layout('layouts/boil') %>
<h1>List of Cafes</h1>
<% for(let r of rest){ %>
    <div style="width: 50%; border: 2px solid black;" class="card" mb-3>
        <div class="row">
            <div class="col-md-4">
                <img style="width: 100%; height: 200px; border: 10px solid black;" class="img-fluid" alt="" src="<%= r.image %> ">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"> <%= r.title %></h5>
                    <p class="card-text"><%= r.locality %> , <%= r.state %> </p>
                    <p class="card-text">
                        <small class="text-muted">Max Cpacity:- <%= r.capacity %> </small>
                    </p>
                    <a class="btn btn-primary" href="/cafes/<%= r._id %>">View <%= r.title %> </a>
                </div>
            </div>
        </div>
    </div>
<% } %>